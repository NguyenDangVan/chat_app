<% provide :title, "Edit user" %>
<div class="sidebar" id="sidebar">
  <div class="container">
    <div class="col-md-12">
      <div class="tab-content">
        <div class="tab-pane fade active show" id="settings">
          <div class="settings">
            <div class="profile">
              <%= image_tag(current_user.avatar, class: "avatar-xl", alt: "avatar") %>
              <h1><%= link_to current_user.name, "#" %></h1>
              <span><%= current_user.address %></span>
              <div class="stats">
                <div class="item">
                  <h2>122</h2>
                  <h3>Fellas</h3>
                </div>
                <div class="item">
                  <h2>305</h2>
                  <h3>Chats</h3>
                </div>
                <div class="item">
                  <h2>1538</h2>
                  <h3>Posts</h3>
                </div>
              </div>
            </div>
            <div class="categories" id="accordionSettings">
              <h1>Settings</h1>
              <div class="category">
                <a href="#" class="title collapsed" id="headingOne" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                  <i class="material-icons md-30 online">person_outline</i>
                  <div class="data">
                    <h5>My Account</h5>
                    <p>Update your profile details</p>
                  </div>
                  <i class="material-icons">keyboard_arrow_right</i>
                </a>
                <div class="collapse" id="collapseOne" aria-labelledby="headingOne" data-parent="#accordionSettings">
                  <div class="content">
                    <%= form_for @user do |f| %>
                      <div class="upload">
                        <div class="data">
                          <%= image_tag(current_user.avatar, class: "avatar-xl", alt: "image") %>
                          <%= f.label :avatar do %>
                            <%= f.file_field :avatar, class: "btn upload_image" %>
                          <% end %>
                        </div>
                        <p>For best results, use an image at least 256px by 256px in either .jpg or .png format!</p>
                      </div>

                      <div class="field">
                        <%= f.label :name, "Your Name"%>
                        <span>*</span>
                        <%= f.text_field :name, class: "form-control", autocomplete: :off, id: "firstName", placeholder: "Your name", value: current_user.name %>
                      </div>
                      <div class="field">
                        <%= f.label :email %>
                        <span>*</span>
                        <%= f.email_field :email, class: "form-control", autocomplete: :off, id: "email", placeholder: "Enter your email address", value: current_user.email %>
                      </div>
                      <div class="field">
                        <%= f.label :address, "Location" %>
                        <span>*</span>
                        <%= f.text_field :address, class: "form-control", autocomplete: :off, id: "location", placeholder: "Enter your location", value: current_user.address %>
                      </div>
                      <div class="field">
                        <%= f.label :password, "Password" %>
                        <span>*</span>
                        <%= f.password_field :password, class: "form-control", autocomplete: :off, id: "password", placeholder: "Enter new password"%>
                      </div>
                      <%= f.submit "Apply", class: "btn button w-100" %>
                    <% end %>
                  </div>
                </div>
              </div>
              <!-- Start of My Account -->
              <div class="category">
              </div>
              <!-- End of My Account -->
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
