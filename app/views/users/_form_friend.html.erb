<% if current_user.blocked? @user %>
  <%= render "users/block" %>
<% else %>
  <% if current_user.is_pending? @user %>
    <%= render "users/close" %>
  <% else %>
    <% if current_user.is_friend? @user %>
      <%= render "users/un_friend" %>
    <% else %>
      <%= render "users/add_friend" %>
    <% end %>
  <% end %>
<% end %>
