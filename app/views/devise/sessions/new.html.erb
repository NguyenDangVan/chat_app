<% provide :title, "Login" %>
<div class="login-wrap">
  <div class="login-html">
    <input id="tab-1" type="radio" name="tab" class="sign-in" checked><label for="tab-1" class="tab">Sign In</label>
    <input id="tab-2" type="radio" name="tab" class="sign-up"><label for="tab-2" class="tab">Sign Up</label>
    <div class="login-form">
      <div class="sign-in-htm">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="group">
          <label for="user" class="label">Username</label>
          <%= f.email_field :email, class: "input" %>
          <!-- <input id="user" type="text" class="input"> -->
        </div>
        <div class="group">
          <label for="pass" class="label">Password</label>
          <%= f.password_field :password, class: "input", data: {type: "password"} %>
          <!-- <input id="pass" type="password" class="input" data-type="password"> -->
        </div>
        <div class="group">
          <input id="check" type="checkbox" class="check" checked>
          <label for="check"><span class="icon"></span> Keep me Signed in</label>
        </div>
        <div class="group">
          <input type="submit" class="button" value="Sign In">
        </div>
        <% end %>
        <div class="hr"></div>
        <div class="foot-lnk">
          <a href="#forgot">Forgot Password?</a>
        </div>
      </div>
      <div class="sign-up-htm">
        <div class="group">
          <label for="user" class="label">Username</label>
          <%#= f.text_field :name, {for: "user", class: "input"} %>
          <!-- <input id="user 2" type="text" class="input"> -->
        </div>
        <div class="group">
          <label for="pass" class="label">Password</label>
          <%#= f.password_field :password, class: "input", data: {type: "password"} %>
          <!-- <input id="pass 1" type="password" class="input" data-type="password"> -->
        </div>
        <div class="group">
          <label for="pass" class="label">Repeat Password</label>
          <%#= f.password_field :password, class: "input", data: {type: "password"} %>
          <!-- <input id="pass 2 " type="password" class="input" data-type="password"> -->
        </div>
        <div class="group">
          <label for="pass" class="label">Email Address</label>
          <%#= f.email_field :email, class: "input"%>
          <!-- <input id="pass 3" type="text" class="input"> -->
        </div>
        <div class="group">
          <%#= f.submit "Sign up", class: "button" %>
          <!-- <input type="submit" class="button" value="Sign Up"> -->
        </div>
        <div class="hr"></div>
        <div class="foot-lnk">
          <label for="tab-1">Already Member?</a>
          <%#= link_to "Already Member?", new_user_session_path %>
        </div>
      </div>
    </div>
  </div>
</div>
