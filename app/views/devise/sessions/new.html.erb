<div class="main order-md-1">
  <div class="start">
    <div class="container">
      <div class="col-md-12">
        <div class="content">
          <h1>Sign in to IChat</h1>
          <div class="third-party">
            <button class="btn item bg-blue">
              <i class="material-icons">pages</i>
            </button>
            <button class="btn item bg-teal">
              <i class="material-icons">party_mode</i>
            </button>
            <button class="btn item bg-purple">
              <i class="material-icons">whatshot</i>
            </button>
          </div>
          <p>or use your email account:</p>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-group">
              <%= f.email_field :email, class: "form-control", id: "inputEmail", placeholder: "Emaill Address" %>
              <button class="btn icon"><i class="material-icons">mail_outline</i></button>
            </div>
            <div class="form-group">
              <%= f.password_field :password, class: "form-control", id: "inputPassword", placeholder: "Password" %>
              <button class="btn icon"><i class="material-icons">lock_outline</i></button>
            </div>
            <%= f.submit "Sign in", class: "btn button" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- End of Sign In -->
<!-- Start of Sidebar -->
<div class="aside order-md-2">
  <div class="container">
    <div class="col-md-12">
      <div class="preference">
        <h2>Hello, Friend!</h2>
        <p>Enter your personal details and start your journey with Swipe today.</p>
        <%= link_to "Sign up", new_user_registration_path, class: "btn button" %>
      </div>
    </div>
  </div>
</div>
<!-- End of Sidebar -->
