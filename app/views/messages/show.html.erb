<div class="content">
  <div class="msg_history" style="height: 516px; overflow-y: auto;">
    <% if @conversation && current_user.id = @conversation.sender_id %>
      <div class="incoming" style="display: inline-block; padding: 0 0 0 10px; vertical-align: top; width: 100%;">
        <%= render "conversations/conversation_content", conversation: @conversation, messages: @conversation.messages %>
      </div>
    <% elsif @conversation %>
      <div class="outcoming" style="overflow: hidden; margin: 26px 0 26px;">
        <%= render "conversations/conversation_content", conversation: @conversation, messages: @conversation.messages %>
      </div>
    <% end %>
  </div>
</div>
