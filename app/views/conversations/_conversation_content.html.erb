<div class="top">
  <div class="container">
    <div class="col-md-12">
      <div class="inside">
        <%= image_tag("avatars/avatar-female-1.jpg", data: {toogle: "tooltip", placement: "top"}, alt: "avatar", class: "avatar-md", title: "Janette") %>
        <div class="status">
          <i class="material-icons online">fiber_manual_record</i>
        </div>
        <div class="data">
          <h5><%= link_to @user.name, "#" %></h5>
          <span>Active now</span>
        </div>
        <button class="btn connect d-md-block d-none" name="1"><i class="material-icons md-30">phone_in_talk</i></button>
        <button class="btn connect d-md-block d-none" name="1"><i class="material-icons md-36">videocam</i></button>
        <button class="btn d-md-block d-none"><i class="material-icons md-30">info</i></button>
        <div class="dropdown">
          <button class="btn" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="material-icons md-30">more_vert</i></button>
          <div class="dropdown-menu dropdown-menu-right">
            <button class="dropdown-item connect" name="1"><i class="material-icons">phone_in_talk</i>Voice Call</button>
            <button class="dropdown-item connect" name="1"><i class="material-icons">videocam</i>Video Call</button>
            <hr>
            <button class="dropdown-item"><i class="material-icons">clear</i>Clear History</button>
            <button class="dropdown-item"><i class="material-icons">block</i>Block Contact</button>
            <button class="dropdown-item"><i class="material-icons">delete</i>Delete Contact</button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- end top chat -->
<!-- start content messages -->

<div class="content" id="content">
  <div class="container">
    <div class="col-md-12">
      <div class="date">
        <hr>
        <span>Today</span>
        <hr>
      </div>
      <% messages.each do |message| %>
      <% if current_user.id == message.user_id %>
        <div class="message me">
          <div class="text-main">
            <div class="text-group me">
              <div class="text me">
                <p><%= message.content %></p>
              </div>
            </div>
            <span><%= message.created_at.strftime("%I:%M %p") %></span>
          </div>
        </div>
      <% else %>
        <div class="message">
          <%= image_tag("avatars/avatar-female-1.jpg", data: {toogle: "tooltip", placement: "top"}, alt: "avatar", class: "avatar-md", title: "Janette") %>
          <div class="text-main">
            <div class="text-group">
              <div class="text">
                <p><%= message.content %></p>
              </div>
            </div>
            <span><%= message.created_at.strftime("%I:%M %p") %></span>
          </div>
        </div>
      <% end %>

      <% end %>

      <div class="message">
        <%= image_tag("avatars/avatar-female-1.jpg", data: {toogle: "tooltip", placement: "top"}, alt: "avatar", class: "avatar-md", title: "Janette") %>
        <div class="text-main">
          <div class="text-group">
            <div class="text typing">
              <div class="wave">
                <span class="dot"></span>
                <span class="dot"></span>
                <span class="dot"></span>
              </div>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>
<!-- end content -->
<!-- end foreach -->
<div class="container">
  <div class="col-md-12">
    <div class="bottom">
      <%= form_for [conversation, conversation.messages.build], html: {class: "position-relative w-100"} do |f| %>
        <%= f.text_area :content, class: "form-control", placeholder: "Start typing for reply...", rows: "1" %>
        <button class="btn emoticons"><i class="material-icons">insert_emoticon</i></button>
        <%= f.submit class: "btn send" %>
        <button type="submit" class="btn send"><i class="material-icons">send</i></button>
      <% end %>
      <label>
        <input type="file">
        <span class="btn attach d-sm-block d-none"><i class="material-icons">attach_file</i></span>
      </label>
