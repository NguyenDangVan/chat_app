<% provide :title, "Groups" %>
<div class="sidebar" id="sidebar">
  <div class="container">
    <div class="col-md-12">
      <div class="tab-content">
        <!-- Start of Discussions -->
        <div id="discussions" class="tab-pane fade active show">
          <div class="search">
            <form class="form-inline position-relative">
              <input type="search" class="form-control" id="conversations" placeholder="Search for people...">
              <button type="button" class="btn btn-link loop">
                <i class="material-icons">search</i>
              </button>
            </form>
            <%= link_to new_user_room_path(current_user.id), class: "btn create", remote: true, data: {toggle: "modal", target: "#startnewchat"} do  %>
              <i class="material-icons">group_add</i>
            <% end %>
          </div>
          <div class="list-group sort">
            <button class="btn filterDiscussionsBtn active show" data-toggle="list" data-filter="all">My Groups</button>
            <button class="btn filterDiscussionsBtn" data-toggle="list" data-filter="read">Joined</button>
          </div>
          <div class="discussions">
            <h1>Groups</h1>
            <div class="list-group" id="chats" role="tablist">
              <%= render partial: "rooms/list_groups", locals: {rooms: @rooms} %>
              <%= render partial: "rooms/groups_of_user", locals: {rooms: @groups_of_user} %>
            </div>
          </div>
        </div>
        <!-- End of Discussions -->
      </div>
    </div>
  </div>
</div>

<%= render "layouts/common" %>
