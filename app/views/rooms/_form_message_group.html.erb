<div class="top">
  <div class="container">
    <div class="col-md-12">
      <div class="inside">
        <%= image_tag("avatars/avatar-female-1.jpg", data: {toogle: "tooltip", placement: "top"}, alt: "avatar", class: "avatar-md", title: "Janette") %>
        <div class="status">
          <i class="material-icons online">fiber_manual_record</i>
        </div>
        <div class="data">
          <h5><%= link_to @room.name, "" %></h5>
          <span>Active now</span>
        </div>
        <button class="btn connect d-md-block d-none" name="1"><i class="material-icons md-30">phone_in_talk</i></button>
        <button class="btn connect d-md-block d-none" name="1"><i class="material-icons md-36">videocam</i></button>
        <button class="btn d-md-block d-none"><i class="material-icons md-30">info</i></button>
        <div class="dropdown">
          <button class="btn" data-toggle="dropdown"><i class="material-icons md-30">more_vert</i></button>
          <div class="dropdown-menu dropdown-menu-right">
            <button class="dropdown-item connect" name="1"><i class="material-icons">settings</i>Edit Group</button>
            <button class="dropdown-item connect" name="1"><i class="material-icons">group_add</i>List Members</button>
            <hr>
            <button class="dropdown-item"><i class="material-icons">power_settings_new</i>Leave Group</button>
            <% if @room.owner_id == current_user.id %>
              <button class="dropdown-item"><i class="material-icons">delete</i>Delete Contact</button>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- end top chat -->
<!-- start content messages -->

<div class="content" id="content">
  <div class="container">
    <div class="col-md-12">
      <div class="date">
        <hr>
        <span>Today</span>
        <hr>
      </div>
      <div id="messages_private">
        <% messages.each do |message| %>
          <%= render "rooms/message", message: message %>
        <% end %>
      </div>
      <div class="message">
        <%= image_tag("avatars/avatar-female-1.jpg", data: {toogle: "tooltip", placement: "top"}, alt: "avatar", class: "avatar-md", title: "Janette") %>
        <div class="text-main">
          <div class="text-group">
            <div class="text typing">
              <div class="wave">
                <span class="dot"></span>
                <span class="dot"></span>
                <span class="dot"></span>
              </div>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>

<div class="container">
  <div class="col-md-12">
    <div class="bottom">
      <%= form_for [current_user, @room, @message], html: {class: "position-relative w-100"}, remote: true do |f| %>
        <%= f.text_area :content, class: "form-control", data: {behavior: "room_speaker"}, placeholder: "Start typing for reply...", rows: "1" %>
        <%= f.button :submit, class: "btn emoticons" do %>
          <i class="material-icons">insert_emoticon</i>
        <% end %>
        <%= f.button :submit, class: "btn send" do %>
          <i class="material-icons">send</i>
        <% end %>
      <% end %>
      <label>
        <input type="file">
        <span class="btn attach d-sm-block d-none"><i class="material-icons">attach_file</i></span>
      </label>
    </div>
  </div>
</div>
