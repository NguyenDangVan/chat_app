<div class="title">
  <h1>Start new group</h1>
  <button type="button" class="btn" data-dismiss="modal" aria-label="close"><i class="material-icons">close</i></button>
</div>
<div class="content">
  <%= form_for [:user, @room], remote: true do |f | %>
    <%= f.hidden_field :owner_id, value: current_user.id %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control", id: "topic", placeholder: "what's the name of group?" %>
    </div>
    <div class="form-group">
      <%= f.label :description do %>
        description
      <% end %>
      <%= f.text_area :description, class: "text-control", id: "message", placeholder: "send your welcome message..." do %>
        Group for who loves Ruby on Rails
      <% end %>
    </div>
    <%= f.submit "Create new group", class: "btn button w-100" %>
  <% end %>
</div>
