<% provide :title, "Chat App" %>
<div class="room-chat">
  <%= render "layouts/left_menu" %>
  <div class="right-menu">
    <div class="title">
      Name of chat room
    </div>
    <div class="content" style="color: black">
      <ul id="conversations-list">
        <% @conversations.each do |conversation| %>
          <%= render "conversations/conversation", conversation: conversation, user: current_user %>
        <% end %>
      </ul>
      <div class="col-md-3">
        <div class="panel panel-primary">
          <div class="panel-heading">
            <h3 class="panel-title">User list</h3>
          </div>
          <div class="panel-body">
            <ul>
              <% @users.each do |user| %>
                <li><%= link_to user.name, conversations_path(user_id: user), remote: true, method: :post %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
    <div class="content-input">
      nhap noi dung
    </div>
  </div>
</div>
