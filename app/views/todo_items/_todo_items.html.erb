<div class="col-md-2 todo">
	<div class="complete">
		<%= link_to complete_room_todo_list_todo_item_path(room, todo_list, todo_item.id), method: :patch do %>
			<i style="opacity: 0.4;" class="fa fa-check"></i>
		<% end %>
	</div>
</div>
<div class="col-md-8 todo">
	<div class="todo_item">
		<p style="opacity: 0.4;"><%= todo_item.content %></p>
	</div>
</div>
<div class="col-md-2 todo" style="color: white">
	<div class="trash">
		<%= link_to room_todo_list_todo_item_path(room, todo_list, todo_item.id), method: :delete,
			data: {confirm: "Are you sure?"}, remote: true do %>
			<i class="fa fa-trash"></i>
		<% end %>
	</div>
</div>
